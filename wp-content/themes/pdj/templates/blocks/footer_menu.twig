<div class="col-lg-3 col-lg-offset-1 footer-panel-block footer-menu {{ component_class }}">
  {% if footer_menu_title %}
  <h3 class="block-title">{{ footer_menu_title }}</h3>
  {% endif %}
  {% if footer_menu_selector %}
    <ul class="menu--list">
    {% for item in function('wp_get_nav_menu_items', footer_menu_selector.ID) %}
      <li class="menu--item"><a href="{{ item.url }}">{{ item.title }}</a></li>
    {% endfor %}
    </ul>
  {% endif %}
</div>