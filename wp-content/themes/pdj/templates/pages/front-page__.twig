{% extends 'layout.twig' %}

{% block content %}
  {% if title_option != "on" %}
    {% if post.title %}
    <h1 id="page-title">
      {{ post.title }}
    </h1>
    {% endif %}
  {% endif %}

  {% for post in posts %}
    {% include 'front_banner.twig' %}
    {{ function('flexible_content', 'group_component') }}
  {% endfor %}

{% endblock %}
